snippet tmpl __init__.py
	__version__ = '0.0.0'

	import sys
	IS_PYTHON3 = sys.version_info[0] >= 3

	if IS_PYTHON3:
		exec('from .${1:} import ${2:}')
		exec('from . import config')
	else:
		exec('from $1 import $2')
		exec('import config')

