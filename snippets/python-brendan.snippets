snippet load
	data = np.loadtxt(${1:fn}, delimiter='${2:\t}', skiprows='${3:0}')
	${4}
snippet save
	np.savetxt(${1:OUT_FILE}, ${2:data}, delimiter='${3:\t}')
	${4}
snippet pyl
	from pylab import *

snippet tmpl Iterate Files
	import os

	IN_FILE = r'${1}'
	OUT_FILE = r'${2}'
	DATA_DIR = r'${3}'

	for fn in os.listdir(DATA_DIR):
		if fn.endswith('${4:.}'):
			fh = open(os.path.join(DATA_DIR, fn), 'r')
			${5}
snippet tmpl Iterate Files Regex
